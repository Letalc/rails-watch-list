<div class="new-list-page container py-5">
  <section class="page-hero mb-4 d-flex align-items-center justify-content-between">
    <div>
      <h1 class="hero-title mb-1">Create a new list</h1>
      <p class="text-muted mb-0">Ponle un nombre único a tu colección de películas.</p>
    </div>
    <div class="hero-actions">
      <%= link_to "Back to lists", lists_path, class: "btn btn-light" %>
    </div>
  </section>

  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <%= render "form", locals: { list: @list } %>
    </div>
  </div>
</div>
