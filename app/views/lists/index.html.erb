<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>My Watch Lists</h1>
    <%= link_to "New list", new_list_path, class: "btn btn-primary" %>
  </div>

  <% if @lists.any? %>
    <div class="row g-3">
      <% @lists.each do |list| %>
        <div class="col-md-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= list.name %></h5>
              <p class="card-text text-muted mb-4"><%= pluralize(list.movies.count, "movie") %></p>
              <%= link_to "Open", list_path(list), class: "btn btn-outline-secondary mt-auto" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No lists yet. Create your first one!</p>
  <% end %>
</div>
