<div class="home-wrap">
  <section class="home-hero container">
    <div class="home-hero__content">
      <h1 class="home-hero__title">Your Watch Lists</h1>
      <p class="home-hero__subtitle">
        Crea colecciones, agrega películas con notas y comparte tus favoritas.
      </p>
      <div class="home-hero__cta">
        <%= link_to "Create a list", new_list_path, class: "btn btn-primary btn-lg" %>
        <%= link_to "Seed movies", "#", class: "btn btn-outline-light btn-lg disabled", title: "Already seeded" %>
      </div>
    </div>
  </section>

  <section class="container">
    <% if @lists.any? %>
      <div class="row g-3">
        <% @lists.each do |list| %>
          <div class="col-12 col-sm-6 col-lg-4">
            <div class="list-card card h-100">
              <div class="list-card__body card-body d-flex flex-column">
                <div class="d-flex align-items-center justify-content-between mb-2">
                  <h5 class="card-title mb-0"><%= list.name %></h5>
                  <span class="list-card__badge"><%= pluralize(list.movies.count, "movie") %></span>
                </div>

                <% posters = list.movies.limit(3).map(&:poster_url).compact %>
                <% if posters.any? %>
                  <div class="list-card__posters mb-3">
                    <% posters.each_with_index do |url, i| %>
                      <img src="<%= url %>" alt="poster" class="list-card__poster list-card__poster--<%= i %>">
                    <% end %>
                  </div>
                <% end %>

                <div class="mt-auto d-flex gap-2">
                  <%= link_to "Open", list_path(list), class: "btn btn-soft-primary w-100" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="container-sm">
        <div class="empty-state">
          <h3>No lists yet</h3>
          <p class="text-muted mb-3">Crea tu primera lista y empieza a guardar películas.</p>
          <%= link_to "Create a list", new_list_path, class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </section>
  <div class="container py-4">
  <h1 class="mb-4">Mis listas</h1>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
    <% @lists.each do |list| %>
      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <% if list.photo.attached? %>
            <%= image_tag list.photo.variant(resize_to_fill: [600, 360]), class: "card-img-top", alt: "#{list.name} cover" %>
          <% else %>
            <%= image_tag "placeholder.jpg", class: "card-img-top", alt: "Sin imagen" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title mb-2"><%= list.name %></h5>
            <p class="card-text text-muted">Películas: <%= list.movies.count %></p>
            <%= link_to "Ver", list_path(list), class: "btn btn-outline-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

</div>
